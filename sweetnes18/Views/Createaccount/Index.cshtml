@{
    ViewData["Title"] = "Create account";
}
<section ng-controller="formsubmit" class="create-account">

    <form autocomplete="off" ng-submit="CreateAccountFunc()" method="post">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <span>{{msg}}</span>
                    <input ng-model="error" type="hidden" value="0" name="lname">
                    <h3>{{"Create an Account"|translate}}</h3>
                    <div class="form-group row">
                        <div class="col-md-12 col-xs-12">
                            <input autocomplete="nope" data-parsley-pattern="^[a-zA-Z]+$" ng-model="fname" required type="text" placeholder="{{'Your First Name'|translate}}" name="fname">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12 col-xs-12">
                            <input autocomplete="nope" data-parsley-pattern="^[a-zA-Z]+$" ng-model="lname" type="text" placeholder="{{'Your Last Name'|translate}}" name="lname">
                        </div>
                    </div>
                    <input type="text" hidden="hidden" ng-model="utype" name="UType">
                    <div class="form-group row boxformobile">
                        <div class="col-md-3 col-lg-3 col-sm-3 col-xs-3 stdcode">AE +971</div>
                            <div class="col-md-9 col-lg-9 col-sm-9 col-xs-9">
<input autocomplete="nope" ng-model="mobile" ng-keyup="chkmobile()" data-parsley-type="digits" type="text" data-parsley-maxlength="10" data-parsley-minlength="9"  required  placeholder="{{'Mobile Number'|translate}}" name="mobileno">
                                <span class="pher"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12 col-xs-12">

                                <input autocomplete="nope" ng-model="email" ng-keyup="chkemail()" type="text" required data-parsley-type="email" placeholder="{{'Email'|translate}}" name="username">
                                <span class="mailer"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-12 col-xs-12">
                                <input autocomplete="nope" ng-model="pass" data-parsley-minlength="6" type="password" required placeholder="{{'Password'|translate}}" name="password">
                                <!-- <span>Minimum 6 Characters</span>-->
                            </div>
                        </div>


                        <input type="submit" class="orange_btn" value="{{'Sign Up'|translate}}" />
                        <br /><p>{{"Already have an account?"| translate }}<a href="~/createaccount/login">{{"Sign in"| translate }}</a></p>
                    </div>
            </div>
        </div>

    </form>
</section>
<style>
    .stdcode {
        padding-top: 5px;
        font-size: 15px;
        color: #9292a7;
    }
</style>