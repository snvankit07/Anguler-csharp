@{
    ViewData["Title"] = "Customer Support";
}
<section class="customer-support">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">{{"Home"| translate }}</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{"Customer Support"| translate }}</li>
        </ol>
        <div class="row support-cont">
            <div class="col-md-3 support-left">
                <div class="contact-left">
                    <a href="#">
                        <div class="img-left">
                            <img src="img/mail.png">
                        </div>
                        <h4>{{"Mail Us"| translate }}</h4>
                    </a>
                </div>
                <div class="contact-left">
                    <a href="#">
                        <div class="img-left">
                            <img src="img/phone.png">
                        </div>
                        <h4>{{"Contact Us"| translate }}</h4>
                    </a>
                </div>
                <div class="contact-left">
                    <a href="#">
                        <div class="img-left">
                            <img src="img/chat.png">
                        </div>
                        <h4>{{"Chat Online"| translate }}</h4>
                    </a>
                </div>
            </div>
            <div class="col-md-9 support-right">
                <h4>{{"Write us a Message"| translate }}</h4>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" placeholder="Full Name">
                        </div>
                        <div class="form-group">
                            <input type="text" placeholder="Email Address">
                        </div>
                        <div class="form-group">
                            <input type="text" placeholder="Subject">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <textarea placeholder="Message"></textarea>
                        </div>
                    </div>
                </div>
                <a href="#" class="orange_btn">{{"Submit"| translate }}</a>
            </div>
        </div>
    </div>
</section>