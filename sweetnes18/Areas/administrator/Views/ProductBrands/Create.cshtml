@model sweetnes18.Areas.administrator.Models.ProductBrand

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>ProductBrand</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
       
        <div class="pull-left col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <label>
                Brand Name
                @Html.EditorFor(model => model.BrandName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BrandName, "", new { @class = "text-danger" })
            </label>
        </div>
    
       
        <div class="pull-left col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <label>
                Brand Slug
                @Html.EditorFor(model => model.Brandslug, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Brandslug, "", new { @class = "text-danger" })
            </label> </div>
    </div>


    <div class="form-group">
       
        <div class="pull-left col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <label>
                Brand image
                <input class="form-control" type="file" name="BrandImage" />
            </label>
        </div>
    
       
        <div class="pull-left col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <label >
               Banner Image
                <input class="form-control" type="file" name="BrandBgImage" />
            </label>

        </div>
    </div>


    <div class="form-group">
        
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <label>
                Brand Status
                <select class="form-control" name="BrandStatus">
                    <option value="1">Publish</option>
                    <option value="2">UnPublish</option>
                </select>
            </label>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    label{ width:100%;}
</style>
