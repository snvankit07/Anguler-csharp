                @Html.ValidationMessageFor(model => model.Shipping, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Billing, htmlAttributes: new { @class = "control-label col-md-12" })
