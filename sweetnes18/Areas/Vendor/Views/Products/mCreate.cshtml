@model sweetnes18.Areas.Vendor.Models.Products
@using sweetnes18.Areas.Vendor.Models
<div class="monly">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="col-xs-12 delivered_title">

        <h3>Add New Product</h3>
    </div>
    <div class="">
        <div class="col-md-4">
            <div class="whole_left">
                <label>Upload Cover image</label>
                <label class="browse_input input_box">
                    <div class="upload_box">
                        <img src="/img/upload_ic_box.png">
                        <h6>Upload </h6>
                        <h6> Product Image</h6>
                    </div>

                    <input required type="file" class="form-control-file exampleInputFile1" name="photo" aria-describedby="fileHelp">
                    <span class="browse_btn">Browse</span>
                </label>



            </div>
        </div>
        <div class="col-md-8 names_of_product monlybgcolorp">

            <div>
                <label class="titlecreaTE">Upload other images of the product</label>
                <div>
                    @for (var i = 1; i <= 12; i++)
                    {
                    <label class="plus imagesshow_@i">
                        <div class="input_box">
                            <img src="/img/plus.png">
                            <input type="file" name="photos[]" class="form-control-file images_@i" aria-describedby="fileHelp">
                        </div>

                    </label>
                    }
                </div>
                <label class="titlecreaTE">Product Information</label>
                <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12">
                    <input type="text" required class="form-control" placeholder="Product Title*" name="ProductTitle" />
                </div>
                <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12">
                    <input type="text" class="form-control" placeholder="Product Title Arabic*" name="ProductTitleArabic" />
                </div>
                <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12">
                    <select required class="form-control" name="BrandID">
                        <option value="">Select Product Brand *</option>
                        @{
                        foreach (var std in ViewData["Brand"] as IList
                        <ProductBrand>
                            )
                            {
                            <option value="@std.ID">@std.BrandName</option>
                            }
                        }
                    </select>
                </div>

                <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12">
                    <input type="text" readonly class="form-control" placeholder="Product SKU*" name="SKU" />
                </div>
                <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12">
                    <select required class="form-control" name="CatID">
                        <option value="">Product Category *</option>
                        @{
                        foreach (var std in ViewData["Category"] as IList
                        <ProductCategory>
                            )
                            {
                            <option value="@std.ID">@std.CategoryName</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12">
                    <input type="text" required class="form-control" data-parsley-type="digits" data-parsley-type="number" name="ProductRegulerPrice" placeholder="Product Price*" />
                </div>

            </div>
            <div class="col-lg-6 col-sm-6 col-md-6 col-xs-12">
                <!--                Hidden Value              -->
                <input type="hidden" value="1" name="productStatus" />
                <input type="hidden" name="ProductSalePrice" value="0" class="form-control" />
                <input type="hidden" required name="productimg" value="0" class="hide form-control" />
                <input type="hidden" required name="productimage" value="0" class="hide form-control" />
                <!--                Hidden Value              -->

                <input type="text" class="form-control" id="usr" data-parsley-type="number" placeholder="Product Quantity *" required name="ProductQun">
                <label class="titlecreaTE">Product Description(English)</label>
                <textarea class="form-control" rows="6" id="comment" name="ProductDec" placeholder="Product Description"></textarea>
                <label class="titlecreaTE">Product Description(Arabic)</label>
                <textarea class="form-control" rows="6" id="comment" name="ProductDecArabic" placeholder="Product Description Arabic"></textarea>
                <hr />
            </div>
            <div style="display:block; clear:both;">
                <h2>Specifications</h2>
                <div class="row specifirows">
                    <div class="container productspecborder">
                        <div class="boxspec"><b>Specifications(English)</b><div class="boxes col-lg-6 col-sm-6 col-md-6 col-xs-6"><input required="" type="text" class="form-control" placeholder="Key" name="Specificationskey[]"></div><div class="boxes col-lg-6 col-sm-6 col-md-6 col-xs-6"><input required="" type="text" class="form-control" placeholder="Value" name="Specificationsvalue[]"></div><div style="clear:both"></div></div>
                        <div class="boxspecAr"><b>Specifications(Arabic)</b><div class="boxes col-lg-6 col-sm-6 col-md-6 col-xs-6"><input required="" type="text" class="form-control" placeholder="Key Arabic" name="SpecificationskeyAr[]"></div><div class="boxes col-lg-6 col-sm-6 col-md-6 col-xs-6"><input required="" type="text" class="form-control" placeholder="Value Arabic" name="SpecificationsvalueAr[]"></div><div style="clear:both"></div></div>
                        <div class="boxes specibtn btns col-lg-12 col-sm-12 col-md-12 col-xs-12"><a style="width:100%;" class="btn btn-danger">+</a></div>
                    </div>
                </div>
                <div class="spec"></div>
            </div>
            <hr />
            <div style="display:block; clear:both;">
                <h2>Additional Information</h2>
                <div class="row additirows">
                    <div class="container productspecborder">
                        <div class="boxspec"><b>Additional Information(English)</b><div class="boxes col-lg-6 col-sm-6 col-md-6 col-xs-6"><input required="" type="text" class="form-control" placeholder="Key" name="AdditionalInformationkey[]"></div><div class="boxes col-lg-6 col-sm-6 col-md-6 col-xs-6"><input type="text" required="" class="form-control" placeholder="Value" name="AdditionalInformationvalue[]"></div><div style="clear:both"></div></div>
                        <div class="boxspecAr"><b>Additional Information(Arabic)</b><div class="boxes col-lg-6 col-sm-6 col-md-6 col-xs-6"><input required="" type="text" class="form-control" placeholder="Key Arabic" name="AdditionalInformationkeyAr[]"></div><div class="boxes col-lg-6 col-sm-6 col-md-6 col-xs-6"><input type="text" required="" class="form-control" placeholder="Value Arabic" name="AdditionalInformationvalueAr[]"></div><div style="clear:both"></div></div>
                        <div class="boxes Additbtn btns col-lg-12 col-sm-12 col-md-12 col-xs-12"><a style="width:100%;" class="btn btn-danger">+</a></div>
                    </div>
                </div>
                <div class="addition"></div>
            </div>
            <input type="submit" value="Create" class="browse_btn buttonsd" />



        </div>
    </div>







    }
</div>